{
  "id": "internal",
  "extends": "oss",
  "discovery": [
    {
      "id": "grammar",
      "category": "grammar",
      "type": "package",
      "root": "languages",
      "max_depth": 1,
      "tests_dir": "grammar/grammar/tests",
      "name": {
        "strategy": "template",
        "template": "{name_slug}-grammar"
      },
      "description": "{name_title} grammar tests"
    },
    {
      "id": "domains",
      "category": "domains",
      "type": "package",
      "root": "languages/python/domains",
      "max_depth": 1,
      "tests_dir": "tests",
      "name": {
        "strategy": "template",
        "template": "{name_slug}"
      },
      "description": "{name_title} domain tests"
    },
    {
      "id": "environments",
      "category": "environments",
      "type": "package",
      "root": "environments",
      "max_depth": 1,
      "tests_dir": "tests",
      "include_root": true,
      "metadata_field": "project.name",
      "name": {
        "strategy": "template",
        "template": "{name_slug}",
        "fallback": "metadata"
      },
      "description": "{display_title} environment tests"
    }
  ]
}
